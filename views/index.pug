extends minimalist_layout
  
block content
  if currentUser
    h1 Welcome back, #{currentUser.full_name}!
    .user-links 
      a(href="/logout") Log Out 
      a(href=currentUser.url) Profile
      a(href="/forum") Forum
  else 
    h1= title
    a.button(href="/login") Login
    a(href="/sign-up") Sign Up 
